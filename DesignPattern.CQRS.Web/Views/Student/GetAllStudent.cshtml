@model IEnumerable<DesignPattern.CQRS.Business.CQRS.Results.StudentResult.GetAllStudentQueryResult>

@{
    ViewData["Title"] = "GetAllStudent";
}

<h1>GetAllStudent</h1>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>İşlemler</th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td><a asp-controller="student" asp-action="GetByIdStudent" asp-route-id=@item.Id >İncele</a></td>
           
        </tr>
}
    </tbody>
</table>
